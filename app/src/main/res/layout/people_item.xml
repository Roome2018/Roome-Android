<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/user_single_image"
        android:layout_width="@dimen/alpha_width"
        android:layout_height="@dimen/alpha_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/layout_margin"
        fresco:placeholderImage="@drawable/default_placeholder"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/user_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_margin"
        android:layout_toEndOf="@id/user_single_image"
        android:gravity="center_vertical"
        android:text="نص الرسالة"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_title" />

    <TextView
        android:id="@+id/user_nati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_single_name"
        android:layout_marginRight="@dimen/layout_margin"
        android:layout_toEndOf="@id/user_single_image"
        android:text=""
        android:textColor="@color/gray"
        android:textSize="@dimen/txt_title" />

    <ImageView
        android:id="@+id/ic_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/layout_margin"
        fresco:srcCompat="@drawable/ic_arrow_right" />
</RelativeLayout>